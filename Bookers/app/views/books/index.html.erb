<p id= "notice"> </p>
<h1>Books</h1>
<table>
  <thead>
  	<tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
  </tr>
</thead>
  <tbody>
  	<% @books.each do |book| %>
	    <tr>
		    <td>
			  <%= link_to book.title, book_path(book) %>
			<!-- 最新のタイトル -->
		    </td>
		    <td>
			  <%= link_to book.body, book_path(book) %>
			<!-- 最新の本文 -->
		    </td>
		    <td>
			  <%= link_to "Show", book_path(book) %>
        </td>
        <td>
			  <%= link_to "Edit", edit_book_path(@book) %>
        </td>
        <td>
			  <%= link_to "Destroy", destroy_path(@book), method: :delete %>
        </td>
	     </tr>
      <% end %>
	<!-- ループさせたい -->
	<% end %>
  </tbody>
</table>

<h2>New book</h2>
<!-- form_for -->
<%= form_for(@book, url:books_path) do |f| %>


    <p><%= f.label :title %></p>
    <p><%= f.text_field :title %></p>


    <p><%= f.label :body %></p>
    <p><%= f.text_area :body %></p>

  <p><%= f.submit 'Create Book' %></p>

<% end %>